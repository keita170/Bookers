<body>
  <h1>Books</h1>
  <table>
    <thead>
     <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
     </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <td colspan="3">
        <%= link_to "Show", book_path(book) %>
        <%= link_to "Edit", edit_book_path(book) %>
        <%= link_to "Destroy", delete_book_path(book), method: :delete, "data-confirm" => "Are you sure? " %>
       </td>
      </tr>
      <% end %>
    </tbody>
  </table>

<h2>New book</h2>
<% if @book.errors.any? %>
  <%=  @book.errors.count %>error prohibited this book from being saved:<br>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model:@book, local:true do |f| %>
<div>Title</div>
<%= f.text_field :title %>
<div>Body</div>
<%= f.text_area :body %><br>
<%= f.submit 'Create Book' %>
<% end %>
</body>